<div class="whole_form">

    <h6> Have you been here? What did you think? <br> </h6>
    <%= form_for [ @destination, @comment ] do |f| %>
        <p>
        <%= f.label :user_name %><br/>
        <%= f.text_field :user_name %>
        </p>
        <p>
        <%= f.label :body %><br/>
        <%= f.text_area :body %>
        </p>
        <p>
        <%= f.submit 'Submit' %>
        </p>
    <% end %>

</div>